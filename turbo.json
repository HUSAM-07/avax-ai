{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "MONGODB_URI",
    "OPENAI_API_KEY",
    "NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID",
    "ZERION_API_KEY",
    "COINGECKO_API_KEY",
    "AVALANCHE_RPC_URL"
  ]
}

